<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="278.0" prefWidth="246.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AbsenceAddReasonViewController">
   <center>
      <TextArea fx:id="reasonField" prefHeight="147.0" prefWidth="246.0" wrapText="true" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleCancelButton" text="%cancel" />
            <Button mnemonicParsing="false" onAction="#handleAddButton" text="%add" />
        </buttons>
      </ButtonBar>
   </bottom>
   <top>
      <Label prefHeight="59.0" prefWidth="185.0" text="%absenceReasonViewTitle" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="8.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
